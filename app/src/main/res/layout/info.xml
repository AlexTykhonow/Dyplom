<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F6DABE"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jestem studentem II roku studiów magisterskich kierunku Zarządzanie i Inżynieria Produkcji Politechniki Świętokrzyskiej na wydziale wydziale Zarządzania i Modelowania Komputerowego.
\n\n Dany program był stworzony dla wykorzystania w prace dyplomowej 'Sprzęt komputerowy jako narzędzie wspomagające zarządzanie logistycznym łańcuchem dostaw'."
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#A795EF"
        android:textSize="24dp"/>
    <ImageButton
        android:id="@+id/button"
        android:layout_width="60dp"
        android:background="#00DA627D"
        android:src="@drawable/ic_arrow"
        android:layout_height="60dp"
        />
</RelativeLayout>